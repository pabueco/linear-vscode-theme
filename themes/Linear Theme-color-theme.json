    "badge.background": "#5E6AD2",

    "statusBar.background": "#27282B",
	},
	"tokenColors": [
		{
			"name": "Comment",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#8a8f98"
			}
		},
		{
			"name": "Variables",
			"scope": [
				"variable",
				"string constant.other.placeholder"
			],
			"settings": {
				"foreground": "#d5e4e7"
			}
		},
		{
			"name": "Properties",
			"scope": [
        "constant.other.class",
				"variable.other.property",
        "support.variable.property"
			],
			"settings": {
				"foreground": "#f3b7e9"
				// "foreground": "#f7c1ca"
			}
		},
		{
			"name": "Colors",
			"scope": [
				"constant.other.color"
			],
			"settings": {
				"foreground": "#ffffff"
			}
		},
		{
			"name": "Invalid",
			"scope": [
				"invalid",
				"invalid.illegal"
			],
			"settings": {
				"foreground": "#eb5757"
			}
		},
		{
			"name": "Keyword, Storage",
			"scope": [
				"keyword",
        "storage.type",
				"storage.modifier"
			],
			"settings": {
        // "fontStyle": "",
				"foreground": "#7681df"
				// "foreground": "#26B5CE"
			}
		},
		{
			"name": "Storage",
			"scope": [
        "storage.type",
				"storage.modifier"
			],
			"settings": {
        // "fontStyle": "italic",
			}
		},
		{
			"name": "Operator, Misc",
			"scope": [
				"constant.other.color",
				"punctuation",
				"punctuation.definition.tag",
				"punctuation.separator.inheritance.php",
				"punctuation.section.embedded",
				"keyword.other.template",
				"keyword.other.substitution",
        "meta.brace",
			],
			"settings": {
				"foreground": "#5da6b8"
			}
		},
		// {
		// 	"name": "Operator, Misc",
		// 	"scope": [
		// 		"meta.brace.round",
    //     "punctuation.definition.arguments.begin.bracket.round",
    //     "punctuation.definition.arguments.end.bracket.round",
		// 	],
		// 	"settings": {
		// 		"foreground": "#5bdeff"
		// 	}
		// },
		{
			"name": "Tag Wrappers",
			"scope": [
				"punctuation.definition.tag.html",
				"punctuation.definition.tag.begin.html",
				"punctuation.definition.tag.end.html",
				"meta.tag",
			],
			"settings": {
				"foreground": "#74829e"
			}
		},
		{
			"name": "HTML Text",
			"scope": [
				"text.html"
			],
			"settings": {
				"foreground": "#b6bdc7"
			}
		},
		{
			"name": "Operator, Misc",
			"scope": [
				"keyword.control",
        "entity.name.type.namespace",
        "keyword.other"
			],
			"settings": {
				// "foreground": "#b2aafa"
        // "fontStyle": "",
				"foreground": "#beb7ff"
			}
		},
		{
			"name": "Operator, Misc",
			"scope": [
				"keyword.control.flow",
				"keyword.control.export",
        "keyword.control.return",
        "meta.function.closure"
			],
			"settings": {
        "fontStyle": "italic",
			}
		},
		{
			"name": "Tag",
			"scope": [
				"entity.name.tag",
				"meta.tag.sgml",
				"markup.deleted.git_gutter"
			],
			"settings": {
				"foreground": "#83acf8"
			}
		},
		{
			"name": "Function, Special Method",
			"scope": [
				"entity.name.function",
				"meta.function-call",
				"variable.function",
				"support.function",
				"keyword.other.special-method"
			],
			"settings": {
				// "foreground": "#26B5CE",
				"foreground": "#1abdda",
				// "foreground": "#e791ab",
				// "foreground": "#f5afcf",
				// "foreground": "#26cec6"
			}
		},
		{
			"name": "Block Level Variables",
			"scope": [
				"meta.block variable.other"
			],
			"settings": {
				"foreground": "#d5e4e7"
			}
		},
		{
			"name": "Other Variable, String Link",
			"scope": [
				"support.other.variable",
				"string.other.link"
			],
			"settings": {
				"foreground": "#f07178"
			}
		},
		{
			"name": "Number, Constant, Tag Attribute, Embedded",
			"scope": [
				"constant.numeric",
				"constant.language",
				"support.constant",
				"constant.character",
				"constant.escape",
        "support.constant.property-value"
			],
			"settings": {
				"foreground": "#ecad76"
			}
		},
		{
			"name": "Function Argument",
			"scope": [
				"variable.parameter",
			],
			"settings": {
        // "fontStyle": "italic",
				"foreground": "#83acf8"
			}
		},
		{
			"name": "String, Symbols, Inherited Class, Markup Heading",
			"scope": [
				"string",
				"constant.other.symbol",
				"constant.other.key",
				"entity.other.inherited-class",
				"markup.heading",
				"markup.inserted.git_gutter",
				"meta.group.braces.curly constant.other.object.key.js string.unquoted.label.js"
			],
			"settings": {
				// "foreground": "#5abb92"
        // "fontStyle": "italic",
				"foreground": "#61bb91"
			}
		},
		{
			"name": "Class, Support",
			"scope": [
				"entity.name",
				"entity.name.type.class",
				"support.type",
				"support.class",
				"markup.changed.git_gutter",
				"support.type.sys-types",
        "support.constant"
			],
			"settings": {
        "fontStyle": "",
				"foreground": "#a8f2ff"
			}
		},
		{
			"name": "Entity Types",
			"scope": [
				"support.type",
        "meta.return.type",
        "entity.name.type",
        "entity.other.inherited-class"
			],
			"settings": {
        "fontStyle": "italic",
				"foreground": "#9ebecc"
				// "foreground": "#dbbd84"
			}
		},
		{
			"name": "Sub-methods",
			"scope": [
				"entity.name.module.js",
				"variable.import.parameter.js",
				"variable.other.class.js"
			],
			"settings": {
				"foreground": "#FF5370"
			}
		},
		{
			"name": "Language methods",
			"scope": [
				"variable.language"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#a8f2ff"
			}
		},
		{
			"name": "entity.name.method.js",
			"scope": [
				"entity.name.method.js"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#82AAFF"
			}
		},
		{
			"name": "meta.method.js",
			"scope": [
				"meta.class-method.js entity.name.function.js",
				"variable.function.constructor"
			],
			"settings": {
				"foreground": "#82AAFF"
			}
		},
		{
			"name": "Attributes",
			"scope": [
				"entity.other.attribute-name"
			],
			"settings": {
        "fontStyle": "italic",
				"foreground": "#cba0ff"
			}
		},
		{
			"name": "HTML Attributes",
			"scope": [
				"text.html.basic entity.other.attribute-name.html",
				"text.html.basic entity.other.attribute-name"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#cba0ff"
			}
		},
		{
			"name": "CSS Classes, IDs",
			"scope": [
				"entity.other.attribute-name.class",
				"entity.other.attribute-name.id",
				"entity.name.tag.css",
			],
			"settings": {
        "fontStyle": "",
        "foreground": "#cba0ff"
			}
		},
		{
			"name": "Inserted",
			"scope": [
				"markup.inserted"
			],
			"settings": {
				"foreground": "#C3E88D"
			}
		},
		{
			"name": "Deleted",
			"scope": [
				"markup.deleted"
			],
			"settings": {
				"foreground": "#eb5757"
			}
		},
		{
			"name": "Changed",
			"scope": [
				"markup.changed"
			],
			"settings": {
				"foreground": "#26B5CE"
			}
		},
		{
			"name": "URL",
			"scope": [
				"*url*",
				"*link*",
				"*uri*"
			],
			"settings": {
				"fontStyle": "underline"
			}
		},
		{
			"name": "Decorators",
			"scope": [
				"tag.decorator.js entity.name.tag.js",
				"tag.decorator.js punctuation.definition.tag.js"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#82AAFF"
			}
		},

    // Sass
    {
