	"tokenColors": [
		{
			"name": "Comment",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#8a8f98"
			}
		},
		{
			"name": "Variables",
			"scope": [
				"variable",
        "variable.other",
        "variable.parameter",
				"string constant.other.placeholder",
				"source.vue meta.object.member.ts meta.object.member.ts",
			],
			"settings": {
				// "foreground": "#d5e4e7"
				"foreground": "#dde8eb"
			}
		},
		{
			"name": "Parameters",
			"scope": [
        "variable.parameter",
			],
			"settings": {
				// "fontStyle": "italic",
				"foreground": "#ffffff"
			}
		},
		{
			"name": "Properties",
			"scope": [
        "constant.other.class",
				"variable.other.property",
				"variable.other.object.property"
